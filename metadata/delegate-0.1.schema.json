{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Delegate",
  "type": "object",
  "properties": {
    "ipfsMetadata": {
      "type": "string",
      "description": "The IPFS hash of the delegate's metadata"
    },
    "status": {
      "type": "string",
      "description": "The status of the delegate",
      "enum": ["Active", "Withdrawn", "Pending"]
    },
    "name": {
      "type": "string",
      "description": "The name of the delegate"
    },
    "profilePictureUrl": {
      "type": "string",
      "format": "uri",
      "description": "The URL of the delegate's profile picture"
    },
    "statement": {
      "type": "string",
      "description": "The delegate's statement"
    }
  }    
}